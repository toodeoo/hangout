.tab-bar{
  width:100%;
  position: fixed;
  bottom:20px;
  left:30px;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item{
  width: 20%;
  padding: 0;
  margin: 0px;
  padding-left: 2vw;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 40%;
}

.default{
  font-weight: 550;
  font-size: 12px;
  color: #7B8B6F;
}

.active{
  font-size: 13px;
  font-weight: 900;
  color:black;
}

