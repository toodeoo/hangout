.navi{
    width: 40px;
    height: 30px;
    margin: 5px;
    padding-top: 10px;
}
.leftHr{
    padding: 0;
    margin: 0;
    width: 1px;
    height:700px;
    background-color:  #7B8B6F;
}
.title{
    font-size: 25px; 
    font-weight: 900; 
    color: #000;
    width: 100%;
    text-align: center;
    border-bottom: 5rpx solid rgb(162, 162, 156);
    padding:10rpx 0;
}
.content{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
}
/* 行程信息 */
.tripInfo{
    width: 70%;
    height: 300rpx;
    margin-top: 80rpx;
}
image{
    height: 300rpx;
    width: 100%;
}
.tripInfo-input{
    width: 70%;
    margin-top: 20rpx;
    border-bottom: 3rpx solid rgb(60, 57, 52);
}
.collectionFun{
    display: flex;
    flex-direction: column;
    width: 80%;
    margin-top: 50rpx;
}
.collectionFun-daka{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    width: 100%;
    margin-top: 10rpx;
    font-size: 35rpx;
}
.collectionFun-daka view{
    display: flex;
    align-items: center;
}
.collectionFun-groupPhoto{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    width: 100%;
    margin-top: 50rpx;
    font-size: 35rpx;

}
.collectionFun-groupPhoto view{
    display: flex;
    align-items: center;
}

.hg {
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    width: 200rpx;
    height: 200rpx;
    z-index: -1;
}

/* 底层样式 */
.wx-switch-input{width:42px !important;height:22px !important;}
.wx-switch-input::before{width:40px !important;height: 20px !important;background-color: rgb(216, 202, 175)!important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;background-color: white!important;}